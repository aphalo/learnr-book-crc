\newenvironment{leftbarc}[1][black]{%
  \def\FrameCommand{\hspace{-5pt}{\color{#1}\vrule width 1.5pt} \hspace{3pt}}%
  \MakeFramed {\advance\hsize-\width \FrameRestore}}%
 {\endMakeFramed}


